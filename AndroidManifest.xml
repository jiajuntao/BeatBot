<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.KarlHiner.BeatBot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    
	<uses-permission android:name="android.permission.SET_DEBUG_APP" />    
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
	<uses-feature android:name="android.hardware.audio.low_latency" />
	        
    <application
        android:name="com.kh.beatbot.global.GlobalVars"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.kh.beatbot.BeatBotActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kh.beatbot.MidiFileMenuActivity"
            android:label="@string/midi_menu" >
        </activity>
        <activity
            android:name="com.kh.beatbot.SampleEditActivity"
            android:label="@string/sample_edit_activity" >
        </activity>
        <activity
            android:name="com.kh.beatbot.BitcrushActivity"
            android:label="@string/bitcrush" >
        </activity>
        <activity
            android:name="com.kh.beatbot.DelayActivity"
            android:label="@string/delay" >
        </activity>
        <activity
            android:name="com.kh.beatbot.FilterActivity"
            android:label="@string/filter" >
        </activity>

        
    </application>

</manifest>