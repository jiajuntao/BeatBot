<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kh.beatbot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    
	<uses-permission android:name="android.permission.SET_DEBUG_APP" />    
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
	<uses-feature android:name="android.hardware.audio.low_latency" />	        
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.kh.beatbot.BeatBotActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kh.beatbot.MidiFileMenuActivity"
            android:label="@string/midi_menu" >
        </activity>
        <activity
            android:name="com.kh.beatbot.SampleEditActivity"
            android:label="@string/sample_edit_activity" >
        </activity>
        <activity
            android:name="com.kh.beatbot.ChorusActivity"
            android:label="@string/chorus" >
        </activity>        
        <activity
            android:name="com.kh.beatbot.DecimateActivity"
            android:label="@string/decimate" >
        </activity>
        <activity
            android:name="com.kh.beatbot.DelayActivity"
            android:label="@string/delay" >
        </activity>
        <activity
            android:name="com.kh.beatbot.FlangerActivity"
            android:label="@string/flanger" >
        </activity>
        <activity
            android:name="com.kh.beatbot.FilterActivity"
            android:label="@string/filter" >
        </activity>
        <activity
            android:name="com.kh.beatbot.TextTestActivity"
            android:label="textTest" >
        </activity>
        <activity
            android:name="com.kh.beatbot.ReverbActivity"
            android:label="@string/reverb" >
        </activity>
        <activity
            android:name="com.kh.beatbot.TremeloActivity"
            android:label="@string/tremelo" >
        </activity>
    </application>

</manifest>