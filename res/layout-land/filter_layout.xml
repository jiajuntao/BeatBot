<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ToggleButton
        android:id="@+id/effect_toggleOn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="toggleEffect"
    />
    
    <ToggleButton 
        android:id="@+id/lp_toggle"
    	android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:layout_below="@+id/effect_toggleOn"
    	android:textOn = ""
    	android:textOff = ""
    	android:background="@drawable/lowpass_filter_btn_src"
    	android:onClick="selectFilterMode"
    />
    
    <ToggleButton 
        android:id="@+id/bp_toggle"
    	android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:layout_below="@+id/effect_toggleOn"
    	android:layout_toRightOf="@+id/lp_toggle"
    	android:background="@drawable/bandpass_filter_btn_src"
    	android:textOn = ""
    	android:textOff = ""
    	android:onClick="selectFilterMode"
    />
    
    <ToggleButton 
        android:id="@+id/hp_toggle"
    	android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:layout_below="@+id/effect_toggleOn"
    	android:layout_toRightOf="@+id/bp_toggle"
    	android:textOn = ""
    	android:textOff = ""
    	android:background="@drawable/highpass_filter_btn_src"
    	android:onClick="selectFilterMode"
    />    

	<ListView
        android:id="@+id/paramListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:layout_alignRight="@+id/effect_toggleOn"
        android:layout_below="@+id/lp_toggle"
    />
	    
    <com.kh.beatbot.view.TronSeekbar2d
        android:id="@+id/xyParamBar"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/effect_toggleOn"
    />

    
</RelativeLayout>