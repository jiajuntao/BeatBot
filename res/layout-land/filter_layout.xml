<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ToggleButton
        android:id="@+id/effect_toggleOn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="toggleEffect"
    />
    
    <ToggleButton 
        android:id="@+id/lp_hp_toggle"
    	android:layout_width="match_parent"
    	android:layout_height="25dp"
    	android:layout_alignRight="@+id/effect_toggleOn"
    	android:layout_below="@+id/effect_toggleOn"
    	android:onClick="toggleLpHpFilter"
    />
    
    <com.kh.beatbot.view.TronSeekbar
        android:id="@+id/xParamBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/effect_toggleOn"        
        android:layout_below="@+id/lp_hp_toggle"
    />
    
    <com.kh.beatbot.view.TronSeekbar
        android:id="@+id/yParamBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/effect_toggleOn"        
        android:layout_below="@+id/xParamBar"
    />

    <com.kh.beatbot.view.XYView
        android:id="@+id/xy_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/effect_toggleOn"
    />

    
</RelativeLayout>