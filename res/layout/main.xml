<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/playButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="play"
        android:text="@string/play" />
    
    <com.kh.beatbot.ThresholdBar
        android:id="@+id/thresholdBar"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/sampleListView"
        android:layout_below="@+id/playButton"
        android:paddingTop="15dp"/>

    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@+id/sampleListView"
        android:layout_alignRight="@+id/sampleListView"
        android:background="#7F000000"
        android:onClick="toggleListening"
        android:src="@drawable/rec_button_off_src" />
    
    <ListView
        android:id="@+id/sampleListView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordButton"
        android:layout_toRightOf="@+id/playButton" />
            
    <com.kh.beatbot.MidiSurfaceView
        android:id="@+id/midiSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/sampleListView"        
        android:layout_alignTop="@+id/recordButton"
        android:layout_alignBottom="@+id/sampleListView"
        />

</RelativeLayout>