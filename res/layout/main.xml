<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sampleListView"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:onClick="play"
            android:text="@string/play" />
        <!-- android:src="@drawable/play_btn_off_src" /> -->

        <Button
            android:id="@+id/stopButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:onClick="stop"
            android:text="@string/stop" />
        <!-- android:src="@drawable/stop_btn_off_src" /> -->

        <com.kh.beatbot.ThresholdBar
            android:id="@+id/thresholdBar"
            android:layout_width="400dp"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/undo"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/undo"
            android:onClick="undo" />
                
    </LinearLayout>

    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/controlLayout"
        android:background="#FF000000"
        android:onClick="toggleListening"
        android:src="@drawable/rec_btn_off_src" />

    <ListView
        android:id="@+id/sampleListView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordButton" />

    <com.kh.beatbot.MidiSurfaceView
        android:id="@+id/midiSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/sampleListView"
        android:layout_alignTop="@+id/recordButton"
        android:layout_toRightOf="@+id/sampleListView" />

</RelativeLayout>