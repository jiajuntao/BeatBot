<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/controlLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sampleListView"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/playButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:textOn="" android:textOff=""
            android:background="@drawable/play_btn_src"
            android:onClick="play" />

        <ImageButton
            android:id="@+id/stopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/playButton"
            android:background="#FF000000"
            android:onClick="stop"
            android:src="@drawable/stop_btn_src" />

        <ToggleButton
            android:id="@+id/recordButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textOn="" android:textOff=""
            android:layout_toRightOf="@+id/stopButton"
            android:background="@drawable/rec_btn_src"
            android:onClick="record" />

        <ToggleButton
            android:id="@+id/volumeButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textOn="" android:textOff=""    
            android:visibility="gone"        
            android:checked="true"
            android:layout_toLeftOf="@+id/panButton"
            android:background="@drawable/volume_btn_src"
            android:onClick="volume" />
        
        <ToggleButton
            android:id="@+id/panButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textOn="" android:textOff=""
            android:visibility="gone"           
            android:layout_toLeftOf="@+id/pitchButton"
            android:background="@drawable/pan_btn_src"
            android:onClick="pan" />
        
        <ToggleButton
            android:id="@+id/pitchButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textOn="" android:textOff=""
            android:visibility="gone"            
            android:layout_toLeftOf="@+id/levels"
            android:background="@drawable/pitch_btn_src"
            android:onClick="pitch" />

        <ToggleButton
            android:id="@+id/levels"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textOn="" android:textOff=""
            android:layout_toLeftOf="@+id/undo"
            android:background="@drawable/levels_btn_src"
            android:onClick="levels" />

        <ImageButton
            android:id="@+id/undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FF000000"
            android:onClick="undo"
            android:layout_toLeftOf="@+id/bpm_tap"
            android:src="@drawable/undo_btn_src" />

        <ImageButton
            android:id="@+id/bpm_tap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/bpm"
            android:background="#FF000000"
            android:onClick="bpmTap"
            android:src="@drawable/bpm_tap_btn_src" />

        <com.kh.beatbot.view.BpmView
            android:id="@+id/bpm"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <com.kh.beatbot.view.ThresholdBarView
        android:id="@+id/thresholdBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/sampleListView"
        android:layout_below="@+id/controlLayout"
        android:layout_above="@+id/midiView" />

    <ListView
        android:id="@+id/sampleListView"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/controlLayout" />

    <com.kh.beatbot.view.MidiView
        android:id="@+id/midiView"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_alignBottom="@+id/sampleListView"
        android:layout_toRightOf="@+id/sampleListView" />

</RelativeLayout>